{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    // "moduleResolution": "node",
    "jsx": "preserve",
    "strict": true,
    // "skipLibCheck": true,
    "allowJs": true, // js也编译出d.ts
    // "esModuleInterop": true,
    // "sourceMap": true,
    // "typeRoots": [
    //   "./types"
    // ],
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}